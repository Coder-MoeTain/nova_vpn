# HTTP port for this provisioning API
PORT=3000

# WireGuard server (VPN) — IP or hostname clients will connect to
WG_ENDPOINT_HOST=76.13.189.118
WG_ENDPOINT_PORT=64288

# WireGuard server's public key (base64). Get it with: wg show wg0 public-key
WG_SERVER_PUBLIC_KEY=your_server_public_key_base64

# Interface name on the server where WireGuard runs (e.g. wg0)
WG_INTERFACE=wg0

# Client IP pool: first three octets (e.g. 10.66.66 → clients get 10.66.66.2, 10.66.66.3, ...)
WG_NETWORK_IPv4=10.66.66
# IPv6 prefix for clients (e.g. fd42:42:42:: → clients get fd42:42:42::2/128, ::3/128, ...)
WG_NETWORK_IPv6=fd42:42:42

# First client index. Your server uses 10.66.66.2/32, so start clients at 3.
WG_NEXT_CLIENT_INDEX=3

# DNS and tunnel options (returned to the app)
WG_DNS=1.1.1.1,1.0.0.1
WG_ALLOWED_IPS=0.0.0.0/0, ::/0
WG_PERSISTENT_KEEPALIVE=25

# Optional: protect the management UI and /api/peers with Basic auth
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secret_password

# --- OpenVPN provisioning (optional). Set OPENVPN_ENABLED=1 to enable ---
# OPENVPN_ENABLED=1
# OPENVPN_SERVER_HOST=76.13.189.118
# OPENVPN_SERVER_PORT=1194
# OPENVPN_EASYRSA_DIR=/etc/openvpn/easy-rsa
